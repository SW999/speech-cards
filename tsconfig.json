{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "incremental": true,
    "baseUrl": "src",
    "rootDir": "./src",
    "declaration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2017",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".cache",
    ".git",
    "dist",
    "node_modules"
  ]
}
